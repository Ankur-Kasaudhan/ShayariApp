<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:background="#930915"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Couples can, Share \nbest Shayari's \nwith your Partners"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:fontFamily="casual"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:layout_marginBottom="20dp"
            android:src="@drawable/kiss"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-40dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:background="#FF5722"
            android:paddingVertical="24dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                app:cardBackgroundColor="#C53B10"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="30dp"
                app:cardElevation="0.1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="20dp"
                        android:src="@drawable/rose" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:padding="12dp"
                        android:text="RoseDay\n7 feb"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="#C53B10"
                app:cardCornerRadius="30dp"
                app:cardElevation="0.1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="20dp"
                        android:src="@drawable/propose" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:padding="12dp"
                        android:text="Propose Day\n8 feb"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="#C53B10"
                app:cardElevation="0.1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="22dp"
                        android:src="@drawable/chocolate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:text="Chocolate Day\n 9 feb"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:clickable="true"
                app:cardBackgroundColor="#C53B10"
                android:layout_marginTop="12dp"
                android:focusable="true"
                app:cardCornerRadius="30dp"
                app:cardElevation="0.1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="20dp"
                        android:src="@drawable/b" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:text="Teddy Day\n10 feb"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                app:cardBackgroundColor="#C53B10"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="30dp"
                app:cardElevation="0.1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="27dp"
                        android:src="@drawable/promise" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:text="Promis Day \n 11 feb"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                app:cardBackgroundColor="#C53B10"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="30dp"
                app:cardElevation="0.1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="20dp"
                        android:src="@drawable/hug" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:text="Hug Day\n12 feb"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#C53B10"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="30dp"
                app:cardElevation="0.1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="25dp"
                        android:src="@drawable/kis" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:text="Kiss Day\n13 feb"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                app:cardBackgroundColor="#C53B10"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="30dp"
                app:cardElevation="0.1dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="137dp"
                        android:padding="25dp"
                        android:src="@drawable/quill" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:padding="12dp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text=" Two Liner-\n Valentine\n Special"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>